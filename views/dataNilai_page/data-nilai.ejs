<html>
    <%- include('../components/style.ejs')  %> 

    <body>
        <%- include('../components/navbar.ejs')  %> 
        <div class="container">
            <h1 class="fas fa-table tableTitle"> Data Nilai</h1> <br>

            <a href="/data-nilai/add" class="btn btn-info fas fa-plus-square my-3 px-5"></a>
            <a href="#">Export Excel</a>
            <a href="#">EXport PDF</a>

            <table class="table table-bordered text-center">
                <thead class="thead-dark">
                    <tr>
                        <th>No.</th>
                        <th>NIS</th>
                        <th>Nama Siswa</th>
                        <th>Kelas</th>
                        <th>Jurusan</th>
                        <th>MaPel</th>
                        <th>Nilai UH</th>
                        <th>Nilai UTS</th>
                        <th>Nilai UAS</th>
                        <th>Rata-Rata</th>
                        <th>Predikat</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                   
                        <% if (datajoin.length > 0) { %>
                            <% var i = 1; %> 
                            <% datajoin.forEach(el => { %>
                            <tr>
                                <td><%= i %> </td>
                                <td><%= el.nis  %> </td>
                                <td><%= el.nama_lengkap %> </td>
                                <td><%= el.kelas %> </td>
                                <td><%= el.jurusan %> </td>
                                <td><%= el.mata_pelajaran %> </td>
                                <td><%= el.nilai_uh %> </td>
                                <td><%= el.nilai_uts %> </td>
                                <td><%= el.nilai_uas %> </td>
                                <td><%= Math.floor(el.rata_rata) %> </td>
                                <td><%= el.predikat %> </td>
                                <td>
                                    <a href="/data-nilai/edit/<%=el.id  %> " class="btn btn-success px-4 my-1">Edit</a>
                                    <a href="/data-nilai/delete/<%=el.id  %> " class="btn btn-danger px-3 ">Delete</a>
                                </td>
                            </tr>
                            <%i++}) %>                           
                        <% }else{ %>
                                <td>Data Not found</td>
                            <% } %> 
                        
                    
                </tbody>
            </table>
        </div>

        <%- include('../components/footer.ejs') %> 
    </body>
</html>